@model Refeitorio.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html>
    <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Refeitorio.styles.css" asp-append-version="true" />
    </head>
    <body>
        <div class="login-main">
            <div class="refeitorio-title">
                <h2>Refeitorio</h2>
            </div>
            <div class="login-plate">
                <form asp-controller="Auth" asp-action="Login" method="post" autocomplete="off">
                    <div class="input-group">
                        <input asp-for="Email" class="form-control" placeholder="Endereço email" autocomplete="off" />
                    </div>
                    <div class="error-span">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="input-group">
                        <input asp-for="Password" type="password" class="form-control" placeholder="Palavra-passe" autocomplete="off" />
                    </div>
                    <div class="error-span">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    @if(ViewBag.Error != null){
                        <div class="error-span">@ViewBag.Error</div>
                    }
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary btn-equal" id="btnEntrar">Entrar</button>
                        <button type="button" onclick="window.location.href='@Url.Action("Register", "Auth")'" class="btn btn-default btn-equal" id="btnRegistar">Registar</button>
                    </div>
                </form>
            </div>
        </div>
    </body>
</html>