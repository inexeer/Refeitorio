@model Refeitorio.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Refeitorio</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="login-page">

    <div class="login-wrapper container-fluid min-vh-100 d-flex align-items-center justify-content-center">
        <div class="row w-100 justify-content-center gx-5 align-items-center" style="max-width:1100px;">
            <div class="col-12 col-md-6">
                <div class="text-center mb-4">
                    <img src="~/images/logo-small.png" alt="Refeitorio logo" class="mb-2 site-logo" onerror="this.style.display='none'" />
                    <h1 class="display-6 fw-bold mb-1">Refeitorio</h1>
                    <p class="text-muted small mb-0">Acede à tua conta para marcar refeições e gerir o saldo.</p>
                </div>

                <div class="card login-card shadow-lg rounded-4">
                    <div class="card-body p-4 p-md-5">
                        <form asp-controller="Auth" asp-action="Login" method="post" autocomplete="off" novalidate>
                            <div class="mb-3 position-relative">
                                <label class="form-label visually-hidden" for="Email">Endereço email</label>
                                <div class="input-with-icon">
                                    <span class="input-icon"><i class="bi bi-envelope"></i></span>
                                    <input asp-for="Email" id="Email" class="form-control form-control-lg" placeholder="Endereço email" />
                                </div>
                                <span asp-validation-for="Email" class="text-danger small mt-1 d-block"></span>
                            </div>

                            <div class="mb-3 position-relative">
                                <label class="form-label visually-hidden" for="Password">Palavra-passe</label>
                                <div class="input-with-icon">
                                    <span class="input-icon"><i class="bi bi-lock"></i></span>
                                    <input asp-for="Password" id="Password" type="password" class="form-control form-control-lg" placeholder="Palavra-passe" />
                                </div>
                                <span asp-validation-for="Password" class="text-danger small mt-1 d-block"></span>
                            </div>

                            @if (ViewBag.Error != null)
                            {
                                    <div class="alert alert-danger py-2 small mb-3">
                                    @ViewBag.Error
                                    </div>
                            }

                            <div class="d-flex flex-column flex-sm-row align-items-center justify-content-between gap-3 mt-3">
                                <button type="submit" class="btn btn-primary btn-lg px-4 shadow-sm">
                                    Entrar
                                </button>

                                <div class="d-flex align-items-center gap-3">
                                    <a class="btn btn-link text-decoration-none small" href="@Url.Action("Register", "Auth")">Registar</a>
                                </div>
                            </div>

                            <div class="text-center mt-3">
                                <a class="text-muted small" href="mailto:admin@teste.pt">Esqueceu a password? Contacte o administrador.</a>
                            </div>
                        </form>
                    </div>
                </div>

                <div class="text-center mt-4 small text-muted">
                    © 2025 Bar da Escola — TGPSI2301
                </div>
            </div>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>