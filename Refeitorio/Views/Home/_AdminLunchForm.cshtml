@model Refeitorio.Models.MenuDay

@{
    ViewData["Title"] = "Criar menu diário";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="m-0">Create Menu for a Day</h4>
                </div>

                <div class="card-body">
                    <form asp-controller="Home" asp-action="Create" method="post">

                        <div class="mb-3">
                            <label asp-for="Option" class="form-label">Opção</label>
                            <select asp-for="Option" class="form-select"
                                    asp-items="Html.GetEnumSelectList<MenuOption>()">
                                <option value="">-- Escolhe opção --</option>
                            </select>
                            <span asp-validation-for="Option" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="MainDish" class="form-label">Prato principal</label>
                            <input asp-for="MainDish" class="form-control" />
                            <span asp-validation-for="MainDish" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Soup" class="form-label">Sopa</label>
                            <input asp-for="Soup" class="form-control" />
                            <span asp-validation-for="Soup" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Dessert" class="form-label">Sobremesa</label>
                            <input asp-for="Dessert" class="form-control" />
                            <span asp-validation-for="Dessert" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-success w-100">Submit</button>

                    </form>
                </div>
            </div>

        </div>
    </div>
</div>