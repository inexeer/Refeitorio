@model Refeitorio.ViewModels.AdminPendingUsersViewModel

@{
    ViewData["Title"] = "Home Page";
    var role = Context.Session.GetString("Role");
}

<h2>Dashboard</h2>
<p>Bem vindo!</p>

@if (role == "Admin")
{
    <partial name="_AdminPendingUsers" model="Model" />
}
else 
{
    <body class="bg-gray-50 text-gray-800 font-sans">
        <!-- Header -->
        <header class="bg-amber-500 shadow-md">
            <div class="max-w-6xl mx-auto flex justify-between items-center p-4">
                <h1 class="text-2xl font-bold text-white">Bar do Inete</h1>
                <nav class="space-x-6">
                    <a href="#menu" class="text-white hover:underline">Menu</a>
                    <a href="#horario" class="text-white hover:underline">Horário</a>
                    <a href="#contactos" class="text-white hover:underline">Contactos</a>
                </nav>
            </div>
        </header>

        <!-- Hero -->
        <section class="bg-yellow-100 py-16 text-center">
            <h2 class="text-4xl font-extrabold text-amber-700 mb-4">Bem-vindo ao Bar da Escola!</h2>
            <p class="text-lg text-gray-700 mb-6">Comida barata e boa, feita apenas para ti!</p>
            <a asp-controller="Menu" asp-action="Index"
               class="inline-block px-6 py-3 bg-amber-500 text-white font-semibold rounded-lg hover:bg-amber-600 transition">
                🍽️ Ver Menu Semanal / Marcar Almoço
            </a>
        </section>

        <!-- Menu -->
        <section id="menu" class="max-w-6xl mx-auto py-12 px-4">
            <h3 class="text-3xl font-bold text-center text-amber-600 mb-8">Menu do Dia</h3>
            <div class="grid md:grid-cols-3 gap-8">
                <div class="bg-white rounded-xl shadow-md p-6 text-center">
                    <h4 class="font-semibold text-lg mb-2">Sandes Mistas</h4>
                    <p class="text-gray-600">Pão fresco com queijo e fiambre</p>
                    <span class="block mt-3 text-amber-600 font-bold">1,20 €</span>
                </div>

                <div class="bg-white rounded-xl shadow-md p-6 text-center">
                    <h4 class="font-semibold text-lg mb-2">Tosta de Atum</h4>
                    <p class="text-gray-600">Tosta quente com atum e maionese</p>
                    <span class="block mt-3 text-amber-600 font-bold">1,80 €</span>
                </div>

                <div class="bg-white rounded-xl shadow-md p-6 text-center">
                    <h4 class="font-semibold text-lg mb-2">Sumo Natural</h4>
                    <p class="text-gray-600">Laranja, ananás ou maçã</p>
                    <span class="block mt-3 text-amber-600 font-bold">1,00 €</span>
                </div>
            </div>
        </section>

        <!-- Horário -->
        <section id="horario" class="bg-amber-100 py-12 text-center">
            <h3 class="text-3xl font-bold text-amber-700 mb-4">Horário de Funcionamento</h3>
            <p class="text-lg">Segunda a Sexta: <strong>8h às 18h</strong></p>
            <p class="text-lg">Sábado e Domingo: <strong>Fechado</strong></p>
        </section>

        <!-- Contactos -->
        <section id="contactos" class="max-w-4xl mx-auto py-12 px-4 text-center">
            <h3 class="text-3xl font-bold text-amber-600 mb-4">Contactos</h3>
            <p class="text-gray-700 mb-2">📍 INETE, Lisboa</p>
            <p class="text-gray-700 mb-2">📞 912 345 678</p>
            <p class="text-gray-700">📧 bardoinete@email.com</p>
        </section>

        <!-- Footer -->
        <footer class="bg-amber-500 text-white text-center py-4 mt-8">
            <p>© 2025 Bar da Escola — Feito pelo TGPSI2301</p>
        </footer>
    </body>
}

<form asp-controller="Auth" asp-action="Logout" method="post" style="display:inline">
    <button type="submit" class="btn btn-danger">Logout</button>
</form>


