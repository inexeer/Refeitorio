@model Refeitorio.ViewModels.StudentBarViewModel

<div class="row mb-4">
    <div class="col-12 col-md-8 col-lg-6 mx-auto">
        <div class="d-flex gap-3 align-items-center justify-content-center flex-wrap">

            <div class="input-group input-group-sm shadow-sm rounded-pill overflow-hidden flex-fill" style="max-width: 380px; background: white;">
                <span class="input-group-text bg-white border-0 text-primary">
                    <i class="bi bi-search"></i>
                </span>
                <input type="text"
                       id="productSearch"
                       class="form-control bg-white border-0 ps-0"
                       placeholder="Pesquisar produtos..."
                       autocomplete="off">
                <button class="btn btn-white border-0 text-muted" type="button" id="clearSearch">
                    <i class="bi bi-x-lg"></i>
                </button>
            </div>

            <select id="categoryFilter" class="form-select form-select-sm rounded-pill shadow-sm" style="width: auto; min-width: 200px;">
                <option value="">Todas as categorias</option>
                @foreach (var cat in Model.Categories.OrderBy(c => c))
                {
                    <option value="@cat.ToLowerInvariant()">@cat</option>
                }
            </select>
        </div>

        <small class="text-muted d-block text-center mt-2">
            <span id="searchCount">@Model.Products.Count</span>
        </small>
    </div>
</div>

<div id="noResultsSearch" class="text-center py-5 d-none">
    <p class="text-muted fs-4">Nenhum produto encontrado.</p>
</div>


<div class="row row-cols-1 row-cols-md-3 row-cols-lg-4 g-4 mt-3" id="productsContainer">
    @foreach (var p in Model.Products)
    {
            <div class="col product-card"
                    data-name="@(p.Name?.ToLowerInvariant() ?? "")"
                    data-category="@(p.Category?.ToLowerInvariant() ?? "")">
                <div class="card h-100 shadow-sm border-0">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title mb-2">@p.Name</h5>
                        <p class="card-text text-muted small mb-1">
                            <strong>Categoria:</strong> @p.Category
                        </p>
                        <p class="card-text small mb-3">
                            <strong>Stock:</strong>
                            <span class="@(p.Stock > 0 ? "text-success" : "text-danger fw-bold")">
                            @(p.Stock > 0 ? $"{p.Stock} unid." : "Esgotado")
                            </span>
                        </p>
                        <h4 class="text-primary fw-bold mt-auto mb-3">
                        @String.Format("{0:0.00} €", p.Price)
                        </h4>
                        <div class="d-flex gap-2 mt-3">
                        @if (p.Stock > 0)
                        {
                                    <div class="d-flex align-items-center gap-1 qty-controls">
                                        <button type="button" class="btn btn-outline-secondary qty-minus d-flex align-items-center justify-content-center px-2"
                                                style="width: 34px; height: 34px; font-size: 1rem; font-weight: bold;">−</button>
                                        <input type="text" class="form-control text-center fw-bold qty-input border-1" value="1" readonly
                                               data-max="@p.Stock" style="width: 50px; height: 34px; font-size: 1rem;">
                                        <button type="button" class="btn btn-outline-secondary qty-plus d-flex align-items-center justify-content-center px-2"
                                                style="width: 34px; height: 34px; font-size: 1rem; font-weight: bold;">+</button>
                                    </div>
                        }
                            <button type="button" class="btn btn-success btn-sm flex-fill comprar-btn"
                                    data-id="@p.Id" data-name="@p.Name" data-price="@p.Price"
                        @(p.Stock <= 0 ? "disabled" : "")>
                                Comprar
                            </button>
                            <button type="button" class="btn btn-outline-primary btn-sm ver-detalhes-btn" data-id="@p.Id">
                                Detalhes
                            </button>
                        </div>
                    @* @if (p.Stock <= 0)
                    {
                                <small class="text-danger text-center mt-2 d-block">Produto esgotado</small>
                    } *@
                    </div>
                </div>
            </div>
    }
</div>

<!-- ADDED: No results message (hidden by default) -->
<div id="noResults" class="text-center py-5 d-none">
    <p class="text-muted fs-4">Nenhum produto encontrado.</p>
</div>

@if (!Model.Products.Any())
{
        <div class="text-center py-5">
            <p class="text-muted fs-4">Ainda não há produtos disponíveis.</p>
        </div>
}