@model Refeitorio.ViewModels.FuncHomeViewModel

<div class="container">
    <h5>Stock de Produtos</h5>
    <p class="text-muted">Lista informativa baseada no ficheiro Products.json</p>
    @if (Model.Products == null || !Model.Products.Any())
    {
        <div class="card" style="padding:12px;">Não existem produtos.</div>
    }
    else
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nome</th>
                    <th>Categoria</th>
                    <th>Preço</th>
                    <th>Stock</th>
               </tr>
           </thead>
           <tbody>
                @foreach (var p in Model.Products)
                {
                    <tr>
                        <td>@p.Id</td>
                        <td>@p.Name</td>
                        <td>@(p.Category)</td>
                        <td>@String.Format("{0:0.00} €", p.Price)</td>
                        <td>@p.Stock</td>
                        <td>
                            <form asp-controller="Home" asp-action="DeleteProduct" method="post" class="d-inline">
                                <input type="hidden" name="id" value="@p.Id" />
                                <button type="submit" class="btn btn-success btn-sm">Apagar</button>
                            </form>
                        </td>
                        <td>
                            <button type="button" data-id="@p.Id" class="btn btn-warning btn-sm edit-product-btn">Editar</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>