@model Refeitorio.ViewModels.SaldoViewModel

<div class="card border-0 shadow-sm">
    <div class="card-body text-center p-4">
        <h5 class="text-muted mb-3">Saldo atual</h5>
        <h2 class="text-primary fw-bold mb-4" id="currentSaldo">
            @Model.Saldo.ToString("0.00") €
        </h2>

        <hr class="my-4">

        <form id="topupForm" class="d-inline">
            <div class="row g-3 justify-content-center">
                <div class="col-auto">
                    <label class="visually-hidden">Valor a carregar</label>
                    <div class="input-group">
                        <span class="input-group-text bg-white">€</span>
                        <input type="number"
                               id="topupAmount"
                               class="form-control form-control-lg text-center"
                               min="1"
                               step="0.50"
                               value="5"
                               style="max-width: 120px;">
                    </div>
                </div>
                <div class="col-auto">
                    <button type="submit" class="btn btn-success btn-lg px-5">
                        <i class="bi bi-plus-circle me-2"></i>
                        Carregar
                    </button>
                </div>
            </div>
        </form>

        <div id="topupMessage" class="mt-3"></div>
    </div>
</div>