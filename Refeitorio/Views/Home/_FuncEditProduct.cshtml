@model Refeitorio.ViewModels.EditProductViewModel

@{
    ViewData["Title"] = "Editar produto";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="m-0">Editar o produto</h4>
                </div>

                <div class="card-body">
                    <form asp-controller="Home" asp-action="EditProduct" method="post" enctype="multipart/form-data">
                        <input type="hidden" asp-for="Id" />

                        <div class="mb-3">
                            <label asp-for="Category" class="form-label">Categoria</label>
                            <input asp-for="Category" class="form-control" />
                            <span asp-validation-for="Category" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">Nome</label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">Descrição</label>
                            <input asp-for="Description" class="form-control" />
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Price" class="form-label">Preço</label>
                            <input asp-for="Price" class="form-control" />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Kcal" class="form-label">Kcal</label>
                            <input asp-for="Kcal" class="form-control" />
                            <span asp-validation-for="Kcal" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Protein" class="form-label">Proteina(g)</label>
                            <input asp-for="Protein" class="form-control" />
                            <span asp-validation-for="Protein" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Fat" class="form-label">Gordura(g)</label>
                            <input asp-for="Fat" class="form-control" />
                            <span asp-validation-for="Fat" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Carbs" class="form-label">Hidratos de carbono</label>
                            <input asp-for="Carbs" class="form-control" />
                            <span asp-validation-for="Carbs" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Allergens" class="form-label">Alergénios</label>
                            <input asp-for="Allergens" class="form-control" />
                            <span asp-validation-for="Allergens" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Stock" class="form-label">Stock</label>
                            <input asp-for="Stock" type="number" class="form-control" min="0" step="1" />
                            <span asp-validation-for="Stock" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label class="form-label">Imagem atual</label>
                            <div class="text-center mb-3">
                                <img src="~/productImages/@Model.CurrentImageFileName"
                                     alt="Imagem atual"
                                     class="img-fluid rounded shadow-sm"
                                     style="max-height: 250px; object-fit: contain;"
                                     onerror="this.src='~/productImages/default.jpg'">
                            </div>
                            <label class="form-label">Substituir imagem (opcional)</label>
                            <input type="file" name="NewImageFile" accept="image/*" class="form-control" />
                            <div class="form-text">Deixe vazio para manter a imagem atual.</div>
                        </div>

                        <button type="submit" class="btn btn-success w-100">Submit</button>

                    </form>
                </div>
            </div>

        </div>
    </div>
</div>
